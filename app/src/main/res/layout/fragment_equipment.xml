<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white">

        <RadioGroup
            android:id="@+id/cet_equipment_list_rg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cet_main_bg_color"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/cet_equipment_collect_tab"
                style="@style/main_tab_bottom"
                android:layout_height="match_parent"
                android:checked="true"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:text="@string/cet_equipment_collect"
                android:textColor="@drawable/main_tab_text"
                android:textSize="20sp"
                 />

            <RadioButton
                android:id="@+id/cet_equipment_working_tab"
                style="@style/main_tab_bottom"
                android:layout_height="match_parent"
                android:paddingLeft="0dp"
                android:text="@string/cet_equipment_working_condition"
                android:textColor="@drawable/main_tab_text"
                android:textSize="20sp"
                />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/cet_equipment_tab_line_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cet_equipment_list_tab_line_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@mipmap/blue_tab_line" />
        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/cet_equipment_list_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>