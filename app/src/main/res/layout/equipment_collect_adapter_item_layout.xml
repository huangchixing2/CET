<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
    <CheckBox
        android:id="@+id/equipment_collect_item_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_centerVertical="true"
        android:textColor="@color/cet_main_nor_color"
        android:button="@null"
        android:drawableRight="@drawable/cet_checkbox_style"
        android:text=""/>
    <TextView
        android:id="@+id/equipment_collect_item_address"
        android:text="武汉花山台区"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/equipment_collect_item_cb"
        android:textSize="15sp"
        android:textColor="@color/cet_main_nor_color"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/equipment_collect_item_statu"
        android:text="在线"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:textSize="15sp"
        android:textColor="@color/cet_main_select_color"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/equipment_collect_item_type"
        android:text="调压器"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/equipment_collect_item_statu"
        android:layout_marginRight="25dp"
        android:textSize="15sp"
        android:textColor="@color/cet_main_nor_color"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
